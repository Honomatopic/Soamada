{% extends "AssocBundle::layout.html.twig" %}
{% block body %}
     <div class="don col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-12 col-xs-12">
          <h1>Pour soutenir l'association</h1>
           {{ form_start(form, {'method': 'post', 'action': path('assoc_paiementdon'), 'attr': {'class': 'form-group'}}) }}
           {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom', 'required':true}}) }}
           {{ form_row(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom', 'required':true}}) }}
           {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email', 'required':true}}) }}
           {{ form_row(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse', 'required':true}}) }}
           {{ form_row(form.cp, {'attr': {'class': 'form-control', 'placeholder': 'Votre code postal', 'required':true}}) }}
           {{ form_row(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Votre ville', 'required':true}}) }}
           {{ form_row(form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Votre téléphone', 'required':true}}) }}
           <div class="col-md-4">
           {{ form_row(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Votre montant', 'required':true}}) }}
           </div>
           
           <div id="ligne">
               {{ form_row(form.moyen) }}
           </div>
           input
           <div class="form-row">
 
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display form errors. -->
    <div id="card-errors" role="alert"></div>
  </div>

  <button>Submit Payment</button>
           {{ form_end(form) }}
     </div>
{% endblock %}
