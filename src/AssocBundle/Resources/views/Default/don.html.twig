{% extends "AssocBundle::layout.html.twig" %}
{% block body %}
     <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-12 col-xs-12">
          <h1>Pour soutenir l'association</h1>
           {{ form_start(form, {'method': 'post', 'action':path('assoc_creerdon'), 'attr': {'class': 'form-group'}}) }}
           {{ form_row(form.nom) }}
           {{ form_row(form.prenom) }}
           {{ form_row(form.email) }}
           {{ form_row(form.adresse) }}
           {{ form_row(form.cp) }}
           {{ form_row(form.ville) }}
           {{ form_row(form.tel) }}
           <div class="col-md-4">
           {{ form_row(form.montant) }}
           </div>
           <div id="ligne">
               {{ form_row(form.moyen) }}
           </div>
           {{ form_row(form.Valider) }}
           {{ form_end(form) }}
     </div>
     </div>
{% endblock %}
