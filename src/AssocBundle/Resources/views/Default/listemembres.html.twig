{% extends "::base.html.twig" %}
{% block body %}
    <h2>La liste des membres</h2>
{% if is_granted("ROLE_ADMIN") %}

  <table class="table">
  <thead>
    <tr class="table-primary">
      <th scope="col">#</th>
      <th scope="col">Login</th>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">Adresse</th>
      <th scope="col">Code postal</th>
      <th scope="col">Ville</th>
      <th scope="col">Téléphone</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
  {% for membre in membres %}
    <tr>
      <th scope="row">{{ membre.id }}</th>
      <td>{{ membre.username }}</td>
      <td>{{ membre.nom }}</td>
      <td>{{ membre.prenom }}</td>
      <td>{{ membre.adresse }}</td>
      <td>{{ membre.cp }}</td>
      <td>{{ membre.ville }}</td>
      <td>{{ membre.tel }}</td>
      <td>{{ membre.email }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<div>
    <a href="{{ path('exportmembres_csv')}}"><button type="button" class="btn btn-success">Générer CSV membres</button></a>
</div>
    
{% endif %}
<div class="alert alert-info">
    <a href="{{ path('assoc_homepage') }}"><button type="button" class="btn btn-link">Retour à la page d'accueil</button></a>
</div>
{% endblock %}